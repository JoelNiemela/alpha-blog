<h1 align="center">Create new category</h1>

<% if @category.errors.any? %>
    <h2>The following errors prevented the category from getting created</h2>
    
    <div class="alert alert-danger" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <p><%= @category.errors.full_messages.length %> errors prohibited this category from being saved</p>
        <% @category.errors.full_messages.each do |msg| %>
            <p>&emsp;
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <%= msg %>
            </p>
        <% end %>
    </div>
<% end %>

<%= form_for(@category, :html => {role: "form"}) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :name %> 
        </div>
        <div class="col-sm-10">
            <%= f.text_field :name, class: "input form-control", placeholder: "Category name", autofocus: true %>
        </div>
    </div>
    <br><br>
    <div class="form-group">
        <hr>
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary' %>
        </div>
    </div>
<% end %>  