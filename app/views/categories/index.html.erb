<h1 align="center">Listing All Categories</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody id="table">
    <% @categories.each do |category| %>
        <tr>
            <td><strong><%= link_to "#{category.name}", category_path(category) %></strong></td>
        </tr>
    <% end %>
    </tbody>
</table>