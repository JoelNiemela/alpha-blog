<h1>Showing selected article</h1>

<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>

    <% @article.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger" role="alert">
            <p>
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            <%= msg %>
            </p>
        </div>
    <% end %>
<% end %>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :title %>
    </p>
    <p>
        <%= f.text_field :title, class: "input", :readonly => true %>
    </p>
    <p>
        <%= f.label :description %>
    </p>
    <p>
        <%= f.text_area :description, class: "input", :readonly => true %>
    </p>
<% end %>

<%= link_to "Back to articles listing", articles_path %>