<h1>Showing selected article</h1>

<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :title %>
    </p>
    <p>
        <%= f.text_field :title, class: "input", :readonly => true %>
    </p>
    <p>
        <%= f.label :description %>
    </p>
    <p>
        <%= f.text_area :description, class: "input", :readonly => true %>
    </p>
<% end %>

<%= link_to "Back to articles listing", articles_path %>