<% if @article.errors.any? %>
    <h2>The following errors prevented the article from getting created</h2>
    
    <div class="alert alert-danger" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <p><%= @article.errors.full_messages.length %> errors prohibited this article from being saved</p>
        <% @article.errors.full_messages.each do |msg| %>
            <p>&emsp;
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <%= msg %>
            </p>
        <% end %>
    </div>
<% end %>

<div class="row">
    <div class="col-xs-12">
      <%= form_for(@article, :html => {role: "form"}) do |f| %>
          <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :title %> 
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :title, class: "input form-control", placeholder: "Title", autofocus: true %>   
                </div>
            </div
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :description %>
                </div>
                <div class="col-sm-10">
                    <%= f.text_area :description, rows: 10, class: "text-box form-control", placeholder: "Article body", autofocus: true %>
                <div class="form-group">
                    <hr>
                    <div class="col-sm-0">
                        <%= f.submit class: "btn btn-primary"%>
                        <%= link_to "Back to articles listing", articles_path, style: 'float: right' %>
                    </div>
                </div>
            </div>
        <% end %>  
    </div>
</div>