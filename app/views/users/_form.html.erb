<% if @user.errors.any? %>
    <h2>The following errors prevented the user from getting created</h2>
    
    <div class="alert alert-danger" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <p><%= @user.errors.full_messages.length %> errors prohibited this user from being saved</p>
        <% @user.errors.full_messages.each do |msg| %>
            <p>&emsp;
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <%= msg %>
            </p>
        <% end %>
    </div>
<% end %>

<div class="row">
    <div class="col-xs-12">
      <%= form_for(@user, :html => {role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :username %> 
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :username, class: "input form-control", placeholder: "Enter username", autofocus: true %>   
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :email %>
                </div>
                <div class="col-sm-10">
                    <%= f.email_field :email, class: "input form-control", placeholder: "Enter email", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :password %> 
                </div>
                <div class="col-sm-10">
                    <%= f.password_field :password, class: "input form-control", placeholder: "Enter password", autofocus: true %>   
                    <div class="form-group">
                        <hr>
                        <div class="col-sm-0">
                            <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary") %>
                            <%= link_to "Back to users listing", users_path, style: 'float: right' %>
                            <% if @user.new_record? then %>
                                <hr>
                                Already have an account?
                                &nbsp;&nbsp;
                                <%= link_to "Login", login_path, class: 'btn btn-primary' %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>  
    </div>
</div>